{
  "name": "rdo-app",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "migrate": "tsx src/scripts/run_migration.ts",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "prepare": "husky",
    "check-size": "size-limit",
    "analyze": "size-limit --why",
    "bundle": "vite-bundle-visualizer --output stats.html",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major"
  },
  "size-limit": [
    {
      "path": "dist/assets/*.js",
      "limit": "90 kB",
      "name": "Main JS Bundle"
    },
    {
      "path": "dist/assets/*.css",
      "limit": "10 kB",
      "name": "Styles"
    }
  ],
  "lint-staged": {
    "*.{js,jsx}": "eslint --fix",
    "*.css": "echo 'CSS staged'"
  },
  "dependencies": {
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.555.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@size-limit/file": "^12.0.0",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^2.1.9",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "size-limit": "^12.0.0",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.21.0",
    "vite": "^7.2.4",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-imagetools": "^9.0.2",
    "vitest": "^2.1.9"
  }
}
